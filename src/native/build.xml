            <fileset dir="${src}/native/sysactivity" includes="*.cpp" />
        </cc>
    </target>

    <target name="globalshortcut" description="Build globalshortcut"
            depends="init-native,globalshortcut-windows,globalshortcut-mac" unless="is.running.windows"/>
